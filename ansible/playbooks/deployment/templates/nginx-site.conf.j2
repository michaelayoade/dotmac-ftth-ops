# Nginx Site Configuration for Tenant: {{ tenant_id }}
# Generated by Ansible provision-tenant.yml playbook
# Subdomain: {{ tenant_subdomain }}.{{ domain }}

# Upstream backend for this tenant
upstream backend_tenant_{{ tenant_id }} {
    least_conn;
    server 127.0.0.1:{{ app_port }} max_fails=3 fail_timeout=30s;
    keepalive 16;
}

{% if frontend_enabled | default(true) %}
# Upstream frontend for this tenant
upstream frontend_tenant_{{ tenant_id }} {
    least_conn;
    server 127.0.0.1:{{ frontend_port }} max_fails=3 fail_timeout=30s;
    keepalive 16;
}
{% endif %}

# Redirect HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name {{ tenant_subdomain }}.{{ domain }}{% if custom_domain %} {{ custom_domain }}{% endif %};

    # Let's Encrypt ACME challenge
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS Server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ tenant_subdomain }}.{{ domain }}{% if custom_domain %} {{ custom_domain }}{% endif %};

    # SSL Configuration
    ssl_certificate {{ ssl_certificate_path | default('/etc/letsencrypt/live/' + tenant_subdomain + '.' + domain + '/fullchain.pem') }};
    ssl_certificate_key {{ ssl_certificate_key_path | default('/etc/letsencrypt/live/' + tenant_subdomain + '.' + domain + '/privkey.pem') }};
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;

    # Modern TLS configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    ssl_trusted_certificate {{ ssl_certificate_path | default('/etc/letsencrypt/live/' + tenant_subdomain + '.' + domain + '/chain.pem') }};
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    # Security Headers
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    {% if tenant_config.csp_header is defined %}
    add_header Content-Security-Policy "{{ tenant_config.csp_header }}" always;
    {% else %}
    add_header Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https: wss:; media-src 'self' https:; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'self'; upgrade-insecure-requests;" always;
    {% endif %}

    # Hide nginx version
    server_tokens off;

    # Request ID for tracing
    add_header X-Request-ID $request_id always;

    # Logging
    access_log /var/log/nginx/tenant-{{ tenant_id }}-access.log main buffer=32k flush=5s;
    error_log /var/log/nginx/tenant-{{ tenant_id }}-error.log warn;

    # Client upload limits
    client_max_body_size {{ max_upload_size | default('100M') }};
    client_body_buffer_size 128k;

    # Timeouts
    client_body_timeout 30;
    client_header_timeout 30;
    keepalive_timeout 65;

    # Rate limiting zones (per-tenant)
    limit_req_zone $binary_remote_addr zone=tenant_{{ tenant_id }}_api:10m rate=10r/s;
    limit_req_zone $binary_remote_addr zone=tenant_{{ tenant_id }}_auth:10m rate=5r/s;
    limit_conn_zone $binary_remote_addr zone=tenant_{{ tenant_id }}_conn:10m;

    # Health check (no auth)
    location /health {
        access_log off;
        proxy_pass http://backend_tenant_{{ tenant_id }}/health;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_connect_timeout 5s;
        proxy_send_timeout 5s;
        proxy_read_timeout 5s;
    }

    # Metrics (internal only - for Prometheus scraping)
    location /metrics {
        allow 10.0.0.0/8;
        allow 172.16.0.0/12;
        allow 192.168.0.0/16;
        allow 127.0.0.1;
        deny all;

        proxy_pass http://backend_tenant_{{ tenant_id }}/metrics;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }

    # Authentication endpoints (strict rate limiting)
    location ~ ^/(auth|login|register|token) {
        limit_req zone=tenant_{{ tenant_id }}_auth burst=5 nodelay;
        limit_conn zone=tenant_{{ tenant_id }}_conn 10;

        proxy_pass http://backend_tenant_{{ tenant_id }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Request-ID $request_id;
        proxy_set_header Connection "";

        # No caching for auth
        proxy_cache_bypass 1;
        proxy_no_cache 1;

        proxy_connect_timeout 5s;
        proxy_send_timeout 10s;
        proxy_read_timeout 10s;
    }

    # WebSocket endpoints
    location ~ ^/(ws|websocket|realtime) {
        proxy_pass http://backend_tenant_{{ tenant_id }};
        proxy_http_version 1.1;

        # WebSocket upgrade headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Request-ID $request_id;

        # Long timeouts for WebSocket
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;

        # Disable buffering
        proxy_buffering off;
    }

    # API endpoints
    location /api {
        limit_req zone=tenant_{{ tenant_id }}_api burst=20 nodelay;
        limit_conn zone=tenant_{{ tenant_id }}_conn 20;

        proxy_pass http://backend_tenant_{{ tenant_id }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Request-ID $request_id;
        proxy_set_header Connection "";

        proxy_connect_timeout 5s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;

        # Caching for GET requests
        proxy_cache_methods GET HEAD;
        proxy_cache_bypass $http_authorization $http_cache_control;
        proxy_no_cache $http_authorization $http_cache_control;
    }

    # GraphQL endpoint
    location /graphql {
        limit_req zone=tenant_{{ tenant_id }}_api burst=10 nodelay;

        proxy_pass http://backend_tenant_{{ tenant_id }}/graphql;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Request-ID $request_id;
        proxy_set_header Connection "";

        proxy_connect_timeout 5s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # No caching for GraphQL
        proxy_cache_bypass 1;
        proxy_no_cache 1;
    }

{% if frontend_enabled | default(true) %}
    # Static assets (frontend) - long cache
    location /_next/static {
        proxy_pass http://frontend_tenant_{{ tenant_id }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header Connection "";

        # Cache static assets aggressively
        proxy_cache_valid 200 365d;
        add_header Cache-Control "public, immutable, max-age=31536000";
        expires 365d;
    }

    # Next.js app (frontend)
    location / {
        proxy_pass http://frontend_tenant_{{ tenant_id }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Request-ID $request_id;
        proxy_set_header Connection "";

        # Short cache for HTML pages
        proxy_cache_valid 200 5m;
        proxy_cache_bypass $http_cache_control;
    }
{% else %}
    # Backend serves everything (no separate frontend)
    location / {
        limit_req zone=tenant_{{ tenant_id }}_api burst=20 nodelay;

        proxy_pass http://backend_tenant_{{ tenant_id }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Request-ID $request_id;
        proxy_set_header Connection "";
    }
{% endif %}

    # Error pages
    error_page 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
        internal;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
