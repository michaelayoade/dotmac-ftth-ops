# RADIUS Clients for Tenant {{ tenant_id }}
# Generated by Ansible

# Default client for testing (localhost)
client localhost {
    ipaddr = 127.0.0.1
    secret = {{ radius_secret }}
    require_message_authenticator = no
    nas_type = other
}

# Tenant-specific NAS devices (populated dynamically)
# Additional clients should be added via the platform API
{% if radius_clients is defined %}
{% for client in radius_clients %}
client {{ client.name }} {
    ipaddr = {{ client.ipaddr }}
    secret = {{ client.secret | default(radius_secret) }}
    require_message_authenticator = {{ client.require_message_authenticator | default('no') }}
    nas_type = {{ client.nas_type | default('other') }}
    {% if client.shortname is defined %}
    shortname = {{ client.shortname }}
    {% endif %}
    {% if client.virtual_server is defined %}
    virtual_server = {{ client.virtual_server }}
    {% endif %}
}
{% endfor %}
{% endif %}

