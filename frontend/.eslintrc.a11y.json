{
  "extends": [
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": [
    "jsx-a11y"
  ],
  "rules": {
    // Enforce alt text on images
    "jsx-a11y/alt-text": [
      "error",
      {
        "elements": ["img", "object", "area", "input[type='image']"],
        "img": ["Image"],
        "object": ["Object"],
        "area": ["Area"],
        "input[type='image']": ["InputImage"]
      }
    ],

    // Enforce ARIA attributes are valid
    "jsx-a11y/aria-props": "error",
    "jsx-a11y/aria-proptypes": "error",
    "jsx-a11y/aria-unsupported-elements": "error",
    "jsx-a11y/aria-role": ["error", { "ignoreNonDOM": true }],

    // Enforce accessible labels
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "required": {
          "some": ["nesting", "id"]
        }
      }
    ],

    // Enforce keyboard accessibility
    "jsx-a11y/click-events-have-key-events": "warn",
    "jsx-a11y/interactive-supports-focus": "error",
    "jsx-a11y/no-noninteractive-element-interactions": "warn",

    // Enforce semantic HTML
    "jsx-a11y/heading-has-content": "error",
    "jsx-a11y/html-has-lang": "error",
    "jsx-a11y/lang": "error",

    // Enforce form accessibility
    "jsx-a11y/autocomplete-valid": "error",
    "jsx-a11y/no-autofocus": "warn",

    // Enforce media accessibility
    "jsx-a11y/media-has-caption": "warn",

    // Enforce interactive element accessibility
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["invalidHref", "preferButton"]
      }
    ],
    "jsx-a11y/anchor-has-content": "error",

    // Enforce proper scope
    "jsx-a11y/scope": "error",

    // Enforce tab index
    "jsx-a11y/tabindex-no-positive": "error",

    // Enforce proper roles
    "jsx-a11y/role-has-required-aria-props": "error",
    "jsx-a11y/role-supports-aria-props": "error",

    // Accessibility best practices
    "jsx-a11y/no-redundant-roles": "error",
    "jsx-a11y/no-static-element-interactions": "warn",
    "jsx-a11y/prefer-tag-over-role": "warn",

    // Custom warnings for common mistakes
    "jsx-a11y/no-access-key": "warn"
  },
  "overrides": [
    {
      // More strict rules for form components
      "files": ["**/forms/**/*.tsx", "**/components/**/Form*.tsx"],
      "rules": {
        "jsx-a11y/label-has-associated-control": "error",
        "jsx-a11y/no-autofocus": "error"
      }
    },
    {
      // More strict rules for interactive components
      "files": [
        "**/components/**/Button*.tsx",
        "**/components/**/Link*.tsx",
        "**/components/**/Modal*.tsx",
        "**/components/**/Dialog*.tsx"
      ],
      "rules": {
        "jsx-a11y/click-events-have-key-events": "error",
        "jsx-a11y/no-noninteractive-element-interactions": "error"
      }
    }
  ]
}
