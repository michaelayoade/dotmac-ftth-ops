# Suppress Node.js deprecation warnings
node-options=--no-deprecation

# Use strict peer dependencies (optional)
# strict-peer-dependencies=false

# Hoist patterns for better performance and TypeScript resolution
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*@radix-ui/*
public-hoist-pattern[]=*@apollo/*
public-hoist-pattern[]=*graphql*
public-hoist-pattern[]=*framer-motion*
public-hoist-pattern[]=*cmdk*
link-workspace-packages=true
