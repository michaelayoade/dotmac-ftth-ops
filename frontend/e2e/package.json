{
  "name": "@dotmac/e2e-tests",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end tests for DotMac Platform",
  "scripts": {
    "test": "echo \"Playwright e2e tests require access to dev servers; skipping in this environment\"",
    "test:local": "playwright test --config=playwright.config.local.ts",
    "test:local:ui": "playwright test --config=playwright.config.local.ts --ui",
    "test:headed": "playwright test --config=playwright.config.ts --headed",
    "test:debug": "playwright test --config=playwright.config.ts --debug",
    "test:ui": "playwright test --config=playwright.config.ts --ui",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen http://localhost:3001/login",
    "install:browsers": "playwright install",
    "install:deps": "playwright install-deps"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.55.1",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0",
    "faker": "^6.6.6"
  }
}
