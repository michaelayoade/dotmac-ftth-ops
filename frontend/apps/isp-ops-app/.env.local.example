# ISP Operations App Environment Configuration
# This app is for ISP tenant users managing their operations

# App Identity
NEXT_PUBLIC_APP_NAME="DotMac ISP Operations"
NEXT_PUBLIC_APP_TYPE=isp-ops
NEXT_PUBLIC_APP_VERSION=1.0.0

# Backend API
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# GraphQL
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8000/graphql
NEXT_PUBLIC_GRAPHQL_WS_URL=ws://localhost:8000/graphql

# Feature Flags for ISP Operations
NEXT_PUBLIC_FEATURES=billing,devices,automation,diagnostics,crm,radius,wireless,pon,network-monitoring,subscribers,ticketing,sales,workflows

# Auth Configuration
NEXT_PUBLIC_AUTH_PROVIDER=jwt
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Enable/Disable Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_REALTIME=true

# Development
NEXT_PUBLIC_MOCK_API=false
NODE_ENV=development
