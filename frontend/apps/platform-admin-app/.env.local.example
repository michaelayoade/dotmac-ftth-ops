# Platform Admin App Environment Configuration
# This app is for platform super-admins managing the entire system

# App Identity
NEXT_PUBLIC_APP_NAME="DotMac Platform Admin"
NEXT_PUBLIC_APP_TYPE=platform-admin
NEXT_PUBLIC_APP_VERSION=1.0.0

# Backend API
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# GraphQL
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8000/graphql
NEXT_PUBLIC_GRAPHQL_WS_URL=ws://localhost:8000/graphql

# Feature Flags for Platform Admin
NEXT_PUBLIC_FEATURES=feature-flags,plugins,licensing,deployment,system-jobs,integrations,platform-admin,audit,security-access,orchestration

# Auth Configuration
NEXT_PUBLIC_AUTH_PROVIDER=jwt
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_REQUIRE_SUPER_ADMIN=true

# Enable/Disable Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_TENANT_VISIBILITY=true

# Development
NEXT_PUBLIC_MOCK_API=false
NODE_ENV=development
